@model Item

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for item shop" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price</h3>
            <h3><a asp-controller="Item" asp-action="Details"
                   asp-route-id="@Model.ItemId">@Model.Name</a></h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                     asp-controller="ShoppingCart"
                     asp-action="AddToShoppingCart"
                     asp-route-itemId="@Model.ItemId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>
