@model ItemListViewModel
    
    <h1>@Model.CurrentCategory</h1>
    @foreach (var item in Model.Item)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@item.ImageThumbnailUrl" alt="image for item" />
                <div class="caption">
                    <h3 class="pull-right">@item.Price.ToString("c")</h3>
                    <h3><a asp-controller="Item" asp-action="Details" asp-route-id="@item.ItemId">@item.Name</a></h3>
                    <P>@item.Description</P>
                </div>
            </div>
        </div>
            
        <partial name="_itemCard" model="item" />
    }

    